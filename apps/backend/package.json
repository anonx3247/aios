{
  "name": "@aios/backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:bundle": "node scripts/bundle.mjs",
    "build:binary": "npm run build:bundle && node scripts/build-binaries.mjs",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@aios/shared": "workspace:*",
    "hono": "^4",
    "@hono/node-server": "^1"
  },
  "devDependencies": {
    "@aios/typescript-config": "workspace:*",
    "@yao-pkg/pkg": "^5.15.0",
    "esbuild": "^0.24.0",
    "tsx": "^4",
    "typescript": "^5.7",
    "@types/node": "^22"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "../../packages/shared/dist/**/*"
    ],
    "targets": ["node18-macos-arm64"],
    "outputPath": "../desktop/src-tauri/binaries"
  }
}
