{
  "$schema": "https://tauri.app/schema/capabilities/default.json",
  "identifier": "default",
  "description": "Default permissions for AIOS",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-center",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/backend",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "sql:default",
    "sql:allow-execute",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "http://localhost:*" }
      ]
    }
  ]
}
